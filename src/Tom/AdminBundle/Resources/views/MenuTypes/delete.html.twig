{% extends "TomAdminBundle::base.html.twig" %}

{% block pageTitle %}{{ pageTitle|striptags }} - {{ parent() }}{% endblock %}

{% block stylesheets %}
{{parent()}}
{% endblock %}

{% block pageContainer %}
<section class="content-header">
  <h1>{{ pageTitle|raw }}</h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>
    <li class="active">Here</li>
  </ol>
</section>

<section class="content" ng-controller="menuController">
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-danger">
              <div class="box-header with-border">
                  <h3 class="box-title"><strong>{{ type.name }}</strong></h3>
              </div>

                <div class="box-body">
                    {{ form(form, {'attr': {'novalidate': 'true'}}) }}
                </div>

            </div>
        </div>
    </div>
</section>
{% endblock %}

{% block javascripts %}
{{parent()}}
<script src="{{ asset('bundles/tomadmin/angular/controller/menuController.js') }}"></script>
{% endblock %}
