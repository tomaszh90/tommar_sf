{% extends "TomAdminBundle::base.html.twig" %}

{% block pageTitle %}{{ pageTitle|striptags }} - {{ parent() }}{% endblock %}

{% block stylesheets %}
    {{parent()}}
{% endblock %}

{% block pageContainer %}
    <section class="content-header">
        <h1>{{ pageTitle|raw }}</h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>
            <li class="active">Here</li>
        </ol>
    </section>

    <section class="content" ng-controller="menuController">
        {{ form_start(form, {'attr': {'novalidate': 'true'}}) }}
        <div class="row">
            <!-- left column -->
            <div class="col-xs-12 col-md-12 col-lg-7">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title"><strong>{{ menu.id is not null or not form.vars.valid ? menu.title :'{[{title}]}' }}</strong></h3>
                    </div>

                    <div class="box-body">
                        {{ menu.id is not null or not form.vars.valid  ? form_row(form.title) : form_row(form.title, {'attr': {'ng-model': 'title'}}) }}
                        {{ form_row(form.route) }}
                        {{ form_row(form.routeParameters) }}

                        <div class="form-group">
                            <label class="control-label">Parametry ścieżki</label>
                            <div id="paramGroups">
                                <div class="form-inline on" data-id="0">       
                                    <div class="input-group col-xs-10 pull-left date" id="date">
                                        <input type="text" name="dates[][name]" class="form-control" data-date-format="DD-MM-YYYY" required />
                                    </div>
                                    <div class="form-group col-xs-2 pull-right">
                                        <button type="button" onclick="deleteParam(this);" class="btn btn-danger"><i class="fa fa-trash-o"></i></button>   
                                    </div>
                                    <div class="clearfix"></div>
                                </div>
                            </div>
                            <button type="button" onclick="addParam();" class="btn btn-default">Dodaj</button>

                        </div>
                    </div>

                    <div class="box-footer">
                        {{ form_row(form.save) }}
                    </div>

                </div>
            </div>
            <!-- right column -->
            <div class="col-xs-12 col-md-6 col-lg-5">
                <div class="box box-danger">
                    <div class="box-header with-border">
                        <h3 class="box-title"><strong>Publikacja</strong></h3>
                    </div>
                    <div class="box-body">
                        {{ form_row(form.publishedDate) }}
                        {{ form_row(form.type) }}
                    </div>
                </div>
            </div>
        </div>
        {{ form_end(form) }}
    </section>
{% endblock %}

{% block javascripts %}
    {{parent()}}
    <script src="{{ asset('bundles/tomadmin/angular/controller/menuController.js') }}"></script>

    <script type="text/javascript">

        function addParam() {
                row = parseInt($('#paramGroups .form-inline:last').attr('data-id')) + 1;
                $('#paramGroups .form-inline:last').clone().attr('data-id', row).appendTo("#paramGroups");
        {#            $('#dateGroups').find("[data-id='" + row + "']").children('.date').find('input').attr('name', 'date['+row+']');#}
            }
            ;

            function deleteParam(object) {
                if ($('#paramGroups .form-inline.on').length > 1) {
                    $(object).parent().parent().remove();
                }
            }
    </script>
{% endblock %}