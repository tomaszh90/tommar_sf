{% extends "TomAdminBundle::base.html.twig" %}

{% block pageTitle %}{{ pageTitle|striptags }} - {{ parent() }}{% endblock %}

{% block stylesheets %}
{{parent()}}
{% endblock %}

{% block pageContainer %}
<section class="content-header">
  <h1>{{ pageTitle|raw }}</h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>
    <li class="active">Here</li>
  </ol>
</section>

<section class="content">

    <div class="row">
        <div class="col-xs-12">
          <div class="box">
            <div class="box-header padding-bottom-15">
              <h3 class="box-title">Lista</h3>
              <div class="box-tools">
                  <a class="btn btn-block btn-md btn-success pull-right" href="{{ path('tom_admin_article_form') }}"><small><i class="fa fa-plus"></i></small>&nbsp;&nbsp;Dodaj nowy</a>
              </div>
            </div><!-- /.box-header -->
            <div class="box-body table-responsive no-padding">

                <form action="{{ path('tom_admin_articles') }}" method="get" class="form-inline filter-search padding-top-15 padding-bottom-15" role="form">
                    
                    {% for key,val in statusesList %}
                    <div class="col-xs-12 col-md-2 col-lg-2 padding-bottom-15">
                        <a class="btn btn-block {{ currStatus == val ? 'btn-default':'btn-primary' }}" href="{{ path('tom_admin_articles', {'status': val}) }}">
                            {{ key }} ({{ statistics[val] }})
                        </a>
                    </div>
                    {% endfor %}

                    <div class="col-xs-6 col-md-2 col-lg-1 padding-bottom-15">
                        <div class="form-group limit">
                               <select name="limit" class="form-control select-block input-md" id="limit" placeholder="Pokaż">
                                   {% for limit in limits %}
                                       <option {{ currLimit == limit ? 'selected="selected"':'' }} value="{{ limit }}">
                                           {{ limit }}
                                       </option>
                                   {% endfor %}
                               </select>
                       </div>
                    </div>

                    <div class="col-xs-6 col-md-2 col-lg-2  padding-bottom-15">
                        <div class="form-group pull-right">
                            <select name="categoryId" class="form-control select2 select-block" style="width: 200px;" placeholder="Kategoria">
                                <option value="">Wybierz kategorię</option>
                                <option {{ -1 == queryParams['categoryId'] ? 'selected="selected"':'' }} value="-1">Brak kategorii</option>
                                {% for category in categoriesList %}
                                <option {{ category['id'] == queryParams['categoryId'] ? 'selected="selected"':'' }} value="{{ category['id'] }}">{{ category['name'] }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>

                    <div class="col-xs-12 col-md-2 col-lg-3 padding-bottom-15">
                        <div class="input-group" style="width: 100%;">
                          <input type="text" name="titleLike" class="form-control input-md" placeholder="Wyszukaj po tytule" value="{{ queryParams['titleLike'] }}">
                          <div class="input-group-btn">
                            <button class="btn btn-md btn-block btn-default"><i class="fa fa-search"></i></button>
                          </div>
                        </div>
                    </div>

                    <div class="clearfix"></div>
               </form>

                <table class="table table-hover">
                  <thead>
                      <tr>
                          <th>{{ knp_pagination_sortable(pagination, 'ID', 'a.id') }}</th>
                          <th>{{ knp_pagination_sortable(pagination, 'Tytuł', 'a.title') }}</th>
                          <th>{{ knp_pagination_sortable(pagination, 'Slug', 'a.slug') }}</th>
                          <th>{{ knp_pagination_sortable(pagination, 'Kategoria', 'c.id') }}</th>
                          <th>Tagi</th>
                          <th>{{ knp_pagination_sortable(pagination, 'Autor', 'au.id') }}</th>
                          <th>{{ knp_pagination_sortable(pagination, 'Data utworzenia', 'a.createDate') }}</th>
                          <th>{{ knp_pagination_sortable(pagination, 'Data publikacji', 'a.publishedDate') }}</th>
                          <th class="actions">Akcje</th>
                      </tr>
                  </thead>
                  {% for row in pagination %}
                      <tr>
                          <td>{{ row.id }}</td>
                          <td>{{ row.title }}</td>
                          <td>{{ row.slug }}</td>
                          <td>
                              {% if row.category is null %}
                                  Brak kategorii
                              {% else %}
                                  {{ row.category.name|capitalize }}
                              {% endif %}
                          </td>
                          <td>
                              {% for tag in row.tags %}
                                  <span class="label label-info">{{ tag.name }}</span>
                              {% else %}
                                  Brak tagów
                              {% endfor %}
                          </td>
                          <td><span class="label label-default">{{ row.author.username }}</span></td>
                          <td>{{ row.createDate|admin_format_date }}</td>
                          <td>
                              {% if row.publishedDate is null %}
                                  <span class="label label-danger">nie opublikowano</span>
                              {% else %}
                                  {{ row.publishedDate|admin_format_date }}
                              {% endif %}
                          </td>
                          <td>
                              <div class="btn-group">
                                  <a href="{{ path('tom_admin_article_form', {'id': row.id}) }}" class="btn btn-primary">
                                      <span class="glyphicon glyphicon-edit"></span>
                                  </a>

                                  {% if is_granted('ROLE_ADMIN') %}
                                      {% set tokenName = csrfProvider.generateCsrfToken(deleteTokenName|format(row.id)) %}
                                      {% set deleteUrl = path('tom_admin_article_delete', {'id': row.id, 'token': tokenName}) %}
                                      <a href="{{ deleteUrl }}" class="btn btn-danger" data-confirmAction="" onclick="return confirm('Czy potwierdzasz usunięcie?');">
                                          <span class="glyphicon glyphicon-trash"></span>
                                      </a>
                                  {% endif %}
                              </div>
                          </td>
                      </tr>
                    {% else %}
                    <tr>
                        <td colspan="8" class="text-center"><br />Brak artykułów spełniejących określone warunki.<br /></td>
                    </tr>
                  {% endfor %}
                </table>
                
            </div>
            <div class="box-footer clearfix">
                {{ knp_pagination_render(pagination, 'TomAdminBundle:Pagination:admin_pagination.html.twig') }}
            </div>
          </div>
        </div>
      </div>

</section>
{% endblock %}

{% block javascripts %}
{{parent()}}
{% endblock %}